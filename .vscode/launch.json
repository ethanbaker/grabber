    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simple Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/simple",
            "args": ["${input:url}"]
        },
        {
            "name": "Telegram Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/telegram",
        }
    ],
    "inputs": [
        {
            "id": "url",
            "description": "Enter URL to fetch",
            "default": "",
            "type": "promptString"
        }
    ]
}